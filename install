sudo apt update && sudo apt install -y expect && expect <(cat <<'EOF'
#!/usr/bin/expect -f
# نصب 3x-ui با پاسخ خودکار به سوال پورت پنل

set timeout -1

# اجرای اسکریپت اصلی نصب
spawn /bin/bash -c {bash <(curl -Ls https://raw.githubusercontent.com/mhsanaei/3x-ui/master/install.sh)}

# وقتی سوال پورت ظاهر شد، "n" و Enter بفرست
expect {
    -re {Would you like to customize the Panel Port settings.*\[y/n\]:} {
        send "n\r"
        exp_continue
    }
    eof
}

# بعد از پاسخ خودکار، کنترل را به کاربر بده
interact
EOF
)
