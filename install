#!/bin/bash

# مرحله اول: بروزرسانی و پاک‌سازی پکیج‌ها
echo "مرحله 1: آپدیت و ارتقای سیستم..."
apt-get update && apt-get upgrade -y && apt-get dist-upgrade -y && apt-get autoremove -y && apt-get autoclean -y

# مرحله دوم: نصب پکیج‌های مورد نیاز
echo "مرحله 2: نصب پکیج‌ها..."
apt-get install -y software-properties-common ufw wget curl git socat cron busybox bash-completion locales nano apt-utils

# مرحله سوم: اضافه کردن مقادیر nofile به limits.conf
echo "مرحله 3: تنظیم nofile در limits.conf..."
LIMITS_FILE="/etc/security/limits.conf"
echo -e "\n* soft nofile 51200\n* hard nofile 51200" >> "$LIMITS_FILE"

# مرحله چهارم: تنظیم ulimit
echo "مرحله 4: تنظیم ulimit..."
ulimit -n 51200

# مرحله پنجم: اضافه کردن تنظیمات شبکه به sysctl.conf مربوط به ufw
echo "مرحله 5: اضافه کردن تنظیمات به sysctl.conf..."
SYSCTL_FILE="/etc/ufw/sysctl.conf"
cat <<EOF >> "$SYSCTL_FILE"

fs.file-max = 51200
net.core.rmem_max = 67108864
net.core.wmem_max = 67108864
net.core.netdev_max_backlog = 250000
net.core.somaxconn = 4096
net.ipv4.tcp_syncookies = 1
net.ipv4.tcp_tw_reuse = 1
net.ipv4.tcp_tw_recycle = 0
net.ipv4.tcp_fin_timeout = 30
net.ipv4.tcp_keepalive_time = 1200
net.ipv4.ip_local_port_range = 10000 65000
net.ipv4.tcp_max_syn_backlog = 8192
net.ipv4.tcp_max_tw_buckets = 5000
net.ipv4.tcp_fastopen = 3
net.ipv4.tcp_mem = 25600 51200 102400
net.ipv4.tcp_rmem = 4096 87380 67108864
net.ipv4.tcp_wmem = 4096 65536 67108864
net.ipv4.tcp_mtu_probing = 1
net.ipv4.tcp_congestion_control = hybla
EOF

echo "✅ تمام مراحل با موفقیت انجام شد!"
